<UserControl x:Class="InventoryManager.Views.ProductListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             MinWidth="150" MinHeight="75">
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <xcdg:DataGridControl ItemsSource="{Binding ProductList}" SelectedItem="{Binding SelectedProduct}" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8">
            <xcdg:DataGridControl.View>
                <xcdg:TableflowView FixedColumnCount="3"/>
            </xcdg:DataGridControl.View>
        </xcdg:DataGridControl>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4">
            <xctk:IntegerUpDown x:Name="Quantity" Value="{Binding Quantity}" Watermark="Enter quantity" Minimum="1" FormatString="N0" HorizontalAlignment="Center" MinWidth="150" Margin="4" Padding="4,0"/>
            <Button x:Name="SelectThisProduct" HorizontalAlignment="Center" Margin="8" Padding="8,4">Add to inventory</Button>
        </StackPanel>
        <Button x:Name="CreateNewProduct" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Margin="4" Padding="4">Create new product</Button>
        <Button x:Name="EditProduct" HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Center" Margin="4" Padding="4">Edit product</Button>
    </Grid>
</UserControl>
