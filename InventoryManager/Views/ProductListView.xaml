<UserControl x:Class="InventoryManager.Views.ProductListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             MinWidth="150" MinHeight="75">
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding ProductList}" 
                  SelectedItem="{Binding SelectedProduct}"
                  IsReadOnly="True"
                  Grid.Column="0" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Center" 
                  Margin="8">        
        </DataGrid>
        <StackPanel Orientation="Horizontal" 
                    Grid.Row="1" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center" 
                    Margin="4">
            <xctk:IntegerUpDown x:Name="Quantity" 
                                Value="{Binding Quantity}" 
                                Watermark="Enter quantity" 
                                Minimum="1" 
                                FormatString="N0" 
                                HorizontalAlignment="Center" 
                                MinWidth="150" 
                                Margin="4" 
                                Padding="4,0"/>
            <Button x:Name="SelectThisProduct" 
                    HorizontalAlignment="Center" 
                    Margin="8" 
                    Padding="8,4">Add to inventory</Button>
        </StackPanel>
        <Button x:Name="CreateNewProduct" 
                HorizontalAlignment="Right" 
                Grid.Row="1" 
                VerticalAlignment="Center" 
                Margin="4" 
                Padding="4">增加产品</Button>
        <Button x:Name="EditProduct" 
                HorizontalAlignment="Right" 
                Grid.Row="2" 
                VerticalAlignment="Center" 
                Margin="4" 
                Padding="4">Edit product</Button>
        <Button x:Name="DeleteProduct" 
                HorizontalAlignment="Right" 
                Grid.Row="3" 
                VerticalAlignment="Center" 
                Margin="4" 
                Padding="4">Delete product</Button>
    </Grid>
</UserControl>
