<UserControl x:Class="InventoryManager.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
             MinWidth="300"
             MinHeight="150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <xcdg:DataGridControl ItemsSource="{Binding InventoryEntries}" ReadOnly="True" HorizontalAlignment ="Left" VerticalAlignment="Center" Grid.Column="0" Margin="8">
            <xcdg:DataGridControl.View>
                <xcdg:TableflowView />
            </xcdg:DataGridControl.View>
        </xcdg:DataGridControl>
        <Button x:Name="SaveInventoryToXml" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="4" Padding="4">Save Inventory</Button>
    </Grid>
</UserControl>
